<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>fr.dauphine.rentproject2018.domain.User</class>
        <class>fr.dauphine.rentproject2018.domain.Role</class>
        <class>fr.dauphine.rentproject2018.domain.Category</class>
        <class>fr.dauphine.rentproject2018.domain.RentalPoint</class>
        <class>fr.dauphine.rentproject2018.domain.Product</class>
        <class>fr.dauphine.rentproject2018.domain.Booking</class>
        <class>fr.dauphine.rentproject2018.domain.Configuration</class>
        <class>fr.dauphine.rentproject2018.domain.Rent</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/rent-project-2018"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
